# PrizmBets Production Environment Configuration Template
# Copy this file to .env.production and fill in your production values

# Application Environment
FLASK_ENV=production
DEBUG=False
PORT=5001

# Domain Configuration
DOMAIN=prizmbets.app
FRONTEND_URL=https://prizmbets.app
BACKEND_URL=https://api.prizmbets.app

# Security - CRITICAL: Change these in production
SECRET_KEY=your-super-secret-key-256-chars-minimum
JWT_SECRET_KEY=your-jwt-secret-key-256-chars-minimum
BCRYPT_LOG_ROUNDS=12

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name
SQLALCHEMY_ENGINE_OPTIONS_POOL_SIZE=20
SQLALCHEMY_ENGINE_OPTIONS_MAX_OVERFLOW=0
SQLALCHEMY_ENGINE_OPTIONS_POOL_TIMEOUT=30
SQLALCHEMY_ENGINE_OPTIONS_POOL_RECYCLE=3600

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
CACHE_REDIS_URL=redis://localhost:6379/1
SESSION_REDIS_URL=redis://localhost:6379/2

# CORS Settings
ALLOWED_ORIGINS=https://prizmbets.app,https://www.prizmbets.app

# Rate Limiting
API_RATE_LIMIT=1000
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/3

# Email Configuration
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=apikey
MAIL_PASSWORD=your-sendgrid-api-key
MAIL_DEFAULT_SENDER=noreply@prizmbets.app
MAIL_MAX_EMAILS=100
MAIL_SUPPRESS_SEND=false

# Payment Configuration (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# External APIs
ODDS_API_KEY=your-odds-api-key
SPORTS_API_KEY=your-sports-api-key

# Monitoring and Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/prizmbets/app.log

# Performance
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=prizmbets:

# Security Headers
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' https://js.stripe.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://api.stripe.com; frame-src https://js.stripe.com

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PAYMENTS=true
ENABLE_LIVE_ODDS=true
ENABLE_ANALYTICS=true

# Worker Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/4
CELERY_RESULT_BACKEND=redis://localhost:6379/5

# File Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=prizmbets-production
AWS_S3_REGION=us-east-1

# CDN Configuration
CDN_URL=https://cdn.prizmbets.app

# Health Check Configuration
HEALTH_CHECK_TOKEN=your-health-check-token