# PrizmBets Production Environment Configuration
# Copy this file to .env.production and configure with your production values

# ============================================
# DEPLOYMENT ENVIRONMENT
# ============================================
FLASK_ENV=production
FLASK_DEBUG=false
PORT=5001

# ============================================
# DOMAIN AND URL CONFIGURATION
# ============================================
# Update these when domain propagates
DOMAIN=prizmbets.app
BASE_URL=https://prizmbets.app
API_URL=https://api.prizmbets.app
FRONTEND_URL=https://prizmbets.app

# CORS Configuration for production
ALLOWED_ORIGINS=https://prizmbets.app,https://www.prizmbets.app

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Generate strong secrets for production
SECRET_KEY=your-super-secure-secret-key-256-chars-minimum
JWT_SECRET_KEY=your-jwt-secret-key-256-chars-minimum

# Rate limiting (requests per minute)
API_RATE_LIMIT=1000

# Session security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================
# Production PostgreSQL connection
DATABASE_URL=postgresql://username:password@host:5432/prizmbets_production

# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ============================================
# EMAIL CONFIGURATION (Production)
# ============================================
# Production email service (recommend SendGrid or AWS SES)
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=apikey
MAIL_PASSWORD=your-sendgrid-api-key
MAIL_DEFAULT_SENDER=noreply@prizmbets.app
MAIL_MAX_EMAILS=1000
MAIL_SUPPRESS_SEND=false

# ============================================
# STRIPE CONFIGURATION (Production)
# ============================================
# Production Stripe keys
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_LIVE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_LIVE_WEBHOOK_SECRET

# Production subscription price IDs
STRIPE_PRO_PRICE_ID=price_YOUR_PRO_PRICE_ID
STRIPE_PREMIUM_PRICE_ID=price_YOUR_PREMIUM_PRICE_ID

# ============================================
# THE ODDS API (Production)
# ============================================
ODDS_API_KEY=your-production-odds-api-key
ODDS_API_BASE_URL=https://api.the-odds-api.com/v4

# ============================================
# REDIS CONFIGURATION (Caching & Sessions)
# ============================================
REDIS_URL=redis://username:password@host:6379/0
REDIS_SSL=true
REDIS_PASSWORD=your-redis-password

# ============================================
# MONITORING AND LOGGING
# ============================================
# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log level (INFO for production)
LOG_LEVEL=INFO
LOG_FORMAT=json

# Application monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-key
DATADOG_API_KEY=your-datadog-key

# ============================================
# PERFORMANCE CONFIGURATION
# ============================================
# Gunicorn workers
WEB_CONCURRENCY=4
WORKER_CLASS=gevent
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# ============================================
# SSL/TLS CONFIGURATION
# ============================================
SSL_REDIRECT=true
HSTS_MAX_AGE=31536000
FORCE_HTTPS=true

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_REAL_PAYMENTS=true
ENABLE_EMAIL_CAMPAIGNS=true
ENABLE_ADMIN_DASHBOARD=true
ENABLE_WEBSOCKETS=true

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_BUCKET=s3://prizmbets-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# ============================================
# CDN CONFIGURATION
# ============================================
CDN_URL=https://cdn.prizmbets.app
STATIC_URL=https://static.prizmbets.app

# ============================================
# DEPLOYMENT NOTES
# ============================================
# 1. Update DOMAIN values when prizmbets.app propagates
# 2. Generate secure random values for SECRET_KEY and JWT_SECRET_KEY
# 3. Configure production database and Redis instances
# 4. Set up SSL certificates (Let's Encrypt recommended)
# 5. Configure monitoring services (Sentry, New Relic, etc.)
# 6. Test all integrations in staging environment first