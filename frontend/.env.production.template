# PrizmBets Frontend Production Environment Configuration Template
# Copy this file to .env.production and fill in your production values

# Build Configuration
GENERATE_SOURCEMAP=false
REACT_APP_BUILD_TIME=__BUILD_TIME__
REACT_APP_VERSION=1.0.0

# API Configuration
REACT_APP_API_URL=https://api.prizmbets.app
REACT_APP_WEBSOCKET_URL=wss://api.prizmbets.app

# Domain Configuration
REACT_APP_DOMAIN=prizmbets.app
REACT_APP_APP_URL=https://prizmbets.app

# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=prizmbets-app.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=prizmbets-app
REACT_APP_FIREBASE_STORAGE_BUCKET=prizmbets-app.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id
REACT_APP_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Payment Configuration
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Analytics Configuration
REACT_APP_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
REACT_APP_HOTJAR_ID=your-hotjar-id

# Feature Flags
REACT_APP_ENABLE_REGISTRATION=true
REACT_APP_ENABLE_PAYMENTS=true
REACT_APP_ENABLE_LIVE_ODDS=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_PWA=true

# CDN Configuration
REACT_APP_CDN_URL=https://cdn.prizmbets.app

# Error Tracking
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Social Media
REACT_APP_TWITTER_HANDLE=@PrizmBets
REACT_APP_FACEBOOK_PAGE=PrizmBets
REACT_APP_INSTAGRAM_HANDLE=@prizmbets

# SEO
REACT_APP_META_TITLE=PrizmBets - Smart Sports Betting Analytics
REACT_APP_META_DESCRIPTION=Advanced sports betting analytics and AI-powered parlay evaluation platform
REACT_APP_META_KEYWORDS=sports betting, parlay, analytics, AI, odds

# Performance
REACT_APP_CACHE_TIMEOUT=300
REACT_APP_ENABLE_SERVICE_WORKER=true

# Support
REACT_APP_SUPPORT_EMAIL=support@prizmbets.app
REACT_APP_CONTACT_PHONE=+1-XXX-XXX-XXXX